{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "image uploader",
    "Metadata": {
        "S3BucketOriginal": {
            "Description": "original images bucket."
        },
        "S3BucketThumbnail": {
            "Description": "Thumbnail images bucket."
        }
    },
    "Resources": {
        "S3BucketOriginal": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "AccessControl": "PublicRead",
                "WebsiteConfiguration": {
                    "IndexDocument": "index.html",
                    "ErrorDocument": "error.html"
                },
                "Tags" : [
                    {
                        "Key" : "name",
                        "Value" : "S3BucketOriginal",
                    }
                ]
            },
        },
        "S3BucketThumbnail": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "AccessControl": "PublicRead",
                "WebsiteConfiguration": {
                    "IndexDocument": "index.html",
                    "ErrorDocument": "error.html"
                },
                "Tags" : [
                    {
                        "Key" : "name",
                        "Value" : "S3BucketThumbnail",
                    }
                ]
            },
        },
        "ExecRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version" : "2012-10-17",
                    "Statement": [ {
                        "Effect": "Allow",
                        "Principal": {
                            "Service": [ "lambda.amazonaws.com" ]
                        },
                        "Action": [ "sts:AssumeRole" ]
                    } ]
                },
                "Path": "/",
                "Policies": [ {
                    "PolicyName": "logs",
                    "PolicyDocument": {
                        "Version" : "2012-10-17",
                        "Statement": [ {
                            "Effect": "Allow",
                            "Action": [
                                "logs:*"
                            ],
                            "Resource": "arn:aws:logs:*:*:*"
                        } ]
                    }
                }, {
                    "PolicyName": "S3BucketOriginal",
                    "PolicyDocument": {
                        "Version" : "2012-10-17",
                        "Statement": [ {
                            "Sid": "AddPerm",
                            "Effect": "Allow",
                            "Principal": "*",
                            "Action": [
                                "s3:GetObject"
                            ],
                            "Resource":{
                                "Fn::Join": [
                                    "",
                                    [
                                        "arn:aws:s3:::",
                                        {
                                            "Ref": "S3BucketOriginal"
                                        },
                                        "/*"
                                    ]
                                ]
                            }
                        } ]
                    }
                }, {
                    "PolicyName": "S3BucketOriginal",
                    "PolicyDocument": {
                        "Version" : "2012-10-17",
                        "Statement": [ {
                            "Sid": "AddPerm",
                            "Effect": "Allow",
                            "Principal": "*",
                            "Action": [
                                "s3:PutObject"
                            ],
                            "Resource":{
                                "Fn::Join": [
                                    "",
                                    [
                                        "arn:aws:s3:::",
                                        {
                                            "Ref": "S3BucketThumbnail"
                                        },
                                        "/*"
                                    ]
                                ]
                            }
                        } ]
                    }
                } ]
            }
        }
    }
}
